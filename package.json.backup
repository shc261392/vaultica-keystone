{
  "name": "@vaultica/keystone",
  "version": "1.0.0",
  "description": "Vaultica Design System - Single Source of Truth (SSoT) for brand tokens, AI context, and assets",
  "author": "Vaultica Team",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/vaultica/keystone.git"
  },
  "main": "dist/tokens.js",
  "types": "dist/tokens.d.ts",
  "files": [
    "dist/",
    "tokens/",
    "ai/",
    "assets/"
  ],
  "scripts": {
    "build": "node scripts/build-tokens.js",
    "validate": "node scripts/validate.js",
    "prebuild": "node scripts/validate.js",
    "watch": "nodemon --watch tokens --ext json --exec 'node scripts/build-tokens.js'",
    "clean": "rm -rf dist/*",
    "rebuild": "rm -rf dist/* && node scripts/build-tokens.js",
    "preview:dev": "pnpm --filter preview dev",
    "preview:install": "pnpm --filter preview install",
    "preview:build": "pnpm --filter preview build",
    "preview:lint": "pnpm --filter preview lint",
    "preview:type-check": "pnpm --filter preview type-check",
    "lint": "eslint \"scripts/**/*.js\" && markdownlint \"**/*.md\" --ignore node_modules && cspell \"**/*.{md,js,json}\" --no-progress",
    "lint:js": "eslint \"scripts/**/*.js\"",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "lint:spell": "cspell \"**/*.{md,js,json}\" --no-progress",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "audit": "pnpm audit --audit-level=moderate",
    "quality": "eslint \"scripts/**/*.js\" && markdownlint \"**/*.md\" --ignore node_modules && prettier --check \"**/*.{js,json,md,yml,yaml}\" && pnpm audit --audit-level=moderate",
    "quality:fix": "prettier --write \"**/*.{js,json,md,yml,yaml}\" && eslint \"scripts/**/*.js\" --fix",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "markdownlint-cli": "^0.39.0",
    "cspell": "^8.3.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "preview/src/**/*.{ts,tsx}": [
      "pnpm --filter preview lint:fix",
      "pnpm --filter preview format"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix"
    ]
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "vaultica",
    "brand",
    "css-variables",
    "tailwind"
  ],
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
